<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#93D6D6"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="140dp"
        android:text="Alimentação"
        android:textColor="#EC0A0A"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Programe os horários de alimentar seu cão, sem excessos e de maneira razoável para que ele não passe fome, os adultos alimente duas vezes ao dia e os filhotes de quatro a seis vezes ao dia. Dê alimentos próprios para a raça e a idade do cachorro  e deixe a água dele sempre limpa e fresca para que não corra risco de ingerir algo inapropriado."
        android:textColor="#000"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="281dp"
        android:layout_marginTop="250dp"
        android:src="@drawable/alimentacao" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="550dp"
        android:text="voltar"/>

</ScrollView>