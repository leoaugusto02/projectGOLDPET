<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.goldpet.Cadastro">

    <ImageView
        android:layout_width="348dp"
        android:layout_height="188dp"
        android:layout_marginLeft="35dp"
        android:src="@drawable/escudo" />

    <EditText android:id="@+id/edtApelido"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="215dp"
        android:hint="Apelido" />

    <EditText android:id="@+id/edtNome"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="260dp"
        android:hint="Nome" />

    <EditText android:id="@+id/edtSobrenome"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="260dp"
        android:hint="Sobrenome" />

    <EditText
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="305dp"
        android:hint="DD/MM/AAAA"/>

    <EditText
        android:id="@+id/edtCep"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="345dp"
        android:hint="CEP" />

    <EditText
        android:id="@+id/edtReferencia"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="345dp"
        android:hint="Referencia" />

    <EditText android:id="@+id/edtCpf"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="390dp"
        android:hint="CPF" />

    <EditText android:id="@+id/edtRg"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="390dp"
        android:hint="RG" />

    <EditText android:id="@+id/edtTel1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="440dp"
        android:hint="Celular" />

    <EditText android:id="@+id/edtTel2"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210sp"
        android:layout_marginTop="440dp"
        android:hint="Telefone" />

    <EditText android:id="@+id/edtEmail"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="490dp"
        android:hint="Email" />

    <EditText android:id="@+id/edtSenha"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="540dp"
        android:hint="Senha" />

    <EditText android:id="@+id/edtConfSenha"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="540dp"
        android:hint="Confirma Senha" />

    <RadioButton
        android:id="@+id/rbMasculino"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="590dp"
        android:text="Masculino" />

    <RadioButton
        android:id="@+id/rbFemenino"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="590dp"
        android:text="Femenino" />

    <Button android:id="@+id/btnCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="640dp"
        android:text="Cadastrar" />


</RelativeLayout>